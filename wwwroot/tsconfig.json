{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "amd",
        "target": "es6",
        "sourceMap": true,
        "lib": [ "es2021", "dom" ],
        "esModuleInterop": true,
        "removeComments": true,
        "outFile": "./build/build.js",
        "typeRoots": ["./type-declarations/*"],
        "moduleResolution": "node",
        "paths": {
            "@type-declarations/*": ["./type-declarations/*"],
            "@components/*": ["./components/*"],
            "@lib/*": ["./lib/*"]
        }
    },
    "include": [ "lib/**/*.ts", "." ],
    "exclude": [
        "node_modules",
        "lib/**/*.spec.ts"
    ]
}
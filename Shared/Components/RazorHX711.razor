    // HX711 5kg Load Cell Amplifier

    [Parameter] public double width { get; set; } = 507;
    [Parameter] public double height { get; set; } = 269;

    private double _weight = 100;

    [Parameter]
    [ValueSetting("g", 100, 100, 1500)] // 1023.75*
    public double weight
    {
        get => _weight;
        set
        {
            if (Controller is not null && value != _weight)
            {
                InvokeAsync(async () => { await Controller.InvokeVoidAsync("setWeight", value); });
            }
            _weight = value;
        }
    }
    
    public static ElementPin[] pinInfo
    {
        get
        {
            return new ElementPin[]
            {
                new ElementPin(name: "VCC", x: 33, y: 80, signals: new PinSignalInfo[] {  }, number: 1),
                new ElementPin(name: "DT", x: 33, y: 60, signals: new PinSignalInfo[] { }, number: 2),
                new ElementPin(name: "SCK", x: 33, y: 70, signals: new PinSignalInfo[] { }, number: 3),
                new ElementPin(name: "GND", x: 33, y: 50, signals: new PinSignalInfo[] {  }, number: 4)
            };
        }
    }
}


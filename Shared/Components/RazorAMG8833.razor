@inherits RazorComponent

@code {
    public static ElementPin[] pinInfo
    {
        get
        {
            return new ElementPin[]
            {
                new ElementPin(name: "3V3", x: 40, y: 180, signals: new PinSignalInfo[] {}, number: 1),
                new ElementPin(name: "gnd", x: 55, y: 180, signals: new PinSignalInfo[] {}, number: 2),

                new ElementPin(name: "scl", x: 80, y: 180, signals: new PinSignalInfo[] {}, number: 3),
                new ElementPin(name: "sda", x: 95, y: 180, signals: new PinSignalInfo[] {}, number: 4),

                // Interrupt pin → valid dictionary pin (d2)
                new ElementPin(name: "int",  x: 65, y: 160, signals: new PinSignalInfo[] {}, number: 5),
            };
        }
    }

    [Parameter]
    [ValueSetting("°C", 25, -40, 80)]
    public double temperature { get; set; }
}